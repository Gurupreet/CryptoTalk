<resources>

    <!-- Base application theme. -->
    <style name="ParentTheme"/>
    <style name="ParentTheme.Light" parent="Theme.MaterialComponents.Light.NoActionBar"/>
    <style name="ParentTheme.Dark" parent="Theme.MaterialComponents.NoActionBar"/>


    <!--&lt;!&ndash; Splash theme. &ndash;&gt;-->
    <!--<style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">-->
        <!--<item name="android:windowBackground">@drawable/splashscreen</item>-->
        <!--<item name="android:windowContentOverlay">@null</item>-->
    <!--</style>-->

    <style name="AppTheme.Light" parent="ParentTheme.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="invertedColor">@color/colorInverted</item>-->
        <!--<item name="invertedColorAlpha">@color/colorInvertedAlpha</item>-->
        <!--<item name="invertedColorAlpha2">@color/colorInvertedAlpha2</item>-->
        <!--<item name="invertedColorAlternate">@color/colorInvertedAlternate</item>-->
        <!--<item name="invertedColorAlternate2">@color/colorInvertedAlternate2</item>-->
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Dark" parent="ParentTheme.Dark">
        <item name="colorPrimary">@color/colorPrimaryDarkTheme</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkThemeDark</item>
        <item name="colorAccent">@color/colorAccentDark</item>
        <!--<item name="invertedColor">@color/colorInvertedDarkTheme</item>-->
        <!--<item name="invertedColorAlpha">@color/colorInvertedDarkThemeAlpha</item>-->
        <!--<item name="invertedColorAlpha2">@color/colorInvertedDarkThemeAlpha2</item>-->
        <!--<item name="invertedColorAlternate">@color/colorInvertedDarkThemeAlternate</item>-->
        <!--<item name="invertedColorAlternate2">@color/colorInvertedDarkThemeAlternate2</item>-->
        <item name="android:windowBackground">@color/colorPrimaryDarkTheme</item>
    </style>
    
    <style name="mainButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_button_blue_solid</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="editTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_edittext_stroke</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

</resources>
