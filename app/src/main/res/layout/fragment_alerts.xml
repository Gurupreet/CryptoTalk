<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.alerts.AlertsFragment">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/gradient_background_blue">

        <LinearLayout
                android:id="@+id/wallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_small"
                android:layout_marginTop="@dimen/margin_medium"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">
            <TextView
                android:id="@+id/wallet_name"
                    android:layout_width="match_parent"
                    android:padding="@dimen/padding_small"
                    android:text="My Wallet"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_height="wrap_content"></TextView>
            <TextView
                android:id="@+id/wallet_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/copy"
                    android:layout_below="@id/wallet_name"
                    android:maxLength="20"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:padding="@dimen/padding_small"
                    android:textStyle="bold"
                    ></TextView>

            <HorizontalScrollView
                    android:id="@+id/balance_view"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_below="@+id/card"
                        android:layout_gravity="center_horizontal"
                        android:paddingLeft="@dimen/padding_small"
                        android:paddingRight="@dimen/padding_small"
                        android:layout_height="wrap_content">
                    <TextView
                            android:id="@+id/tkn1"
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/padding_small"
                            android:paddingBottom="@dimen/padding_small"
                            android:paddingLeft="@dimen/padding_medium"
                            android:paddingRight="@dimen/padding_medium"
                            android:layout_margin="@dimen/margin_small"
                            android:text="ETH: 0"
                            android:visibility="gone"
                            android:textColor="@color/white"
                            android:background="@drawable/bg_white_stroke"/>
                    <TextView
                            android:id="@+id/tkn2"
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/padding_small"
                            android:paddingBottom="@dimen/padding_small"
                            android:paddingLeft="@dimen/padding_medium"
                            android:paddingRight="@dimen/padding_medium"
                            android:layout_margin="@dimen/margin_small"
                            android:text="USDC: 0"
                            android:visibility="gone"
                            android:textColor="@color/white"
                            android:background="@drawable/bg_white_stroke"/>
                    <TextView
                            android:id="@+id/tkn3"
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/padding_small"
                            android:paddingBottom="@dimen/padding_small"
                            android:paddingLeft="@dimen/padding_medium"
                            android:paddingRight="@dimen/padding_medium"
                            android:layout_margin="@dimen/margin_small"
                            android:text="DAI: 0"
                            android:visibility="gone"
                            android:textColor="@color/white"
                            android:background="@drawable/bg_white_stroke"/>
                    <TextView
                            android:id="@+id/tkn4"
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/padding_small"
                            android:paddingBottom="@dimen/padding_small"
                            android:paddingLeft="@dimen/padding_medium"
                            android:paddingRight="@dimen/padding_medium"
                            android:layout_margin="@dimen/margin_small"
                            android:text="TUSD: 0"
                            android:visibility="gone"
                            android:textColor="@color/white"
                            android:background="@drawable/bg_white_stroke"/>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
        <include
                android:id="@id/eth_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_small"
                layout="@layout/row_price_layout"></include>
        <androidx.cardview.widget.CardView
                android:id="@+id/bg"
                android:background="@color/white"
                app:cardCornerRadius="30dp"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginBottom="-20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                    android:text="Active Calls"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_large"
                    android:padding="@dimen/padding_small">

            </TextView>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/alert_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="@dimen/margin_medium"></androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="20dp"
            android:background="@color/colorAccent"
            android:src="@drawable/ic_bell"
            android:tint="@color/white"
            ></com.google.android.material.floatingactionbutton.FloatingActionButton>


</androidx.coordinatorlayout.widget.CoordinatorLayout>