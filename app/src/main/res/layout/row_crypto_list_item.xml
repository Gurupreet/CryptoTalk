<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        android:background="?attr/selectableItemBackground"
        android:layout_margin="@dimen/margin_medium">
    <RelativeLayout
            android:id="@+id/main_wrapper_stock"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_gravity="center_vertical"
          >
        <com.robinhood.spark.SparkView
                android:id="@+id/sparkview"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:visibility="visible"
               android:layout_centerHorizontal="true"
                app:spark_lineColor="@color/colorAccent"/>

        <View
                android:id="@+id/bar_view"
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/name_layout"
                android:layout_alignBottom="@+id/data_layout_value"
                android:padding="5dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="0dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:background="@color/red"></View>

        <ImageView
                android:id="@+id/logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="@dimen/padding_small"
                android:src="@drawable/ic_bell"
                android:layout_toRightOf="@id/bar_view"/>
        <LinearLayout
                android:id="@+id/name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_toRightOf="@id/logo">

            <TextView
                    android:id="@+id/symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="BTC"
                    android:textSize="@dimen/text_medium"
                    android:textStyle="bold"
            />
            <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:layout_below="@id/symbol"
                    android:textColor="@color/grey"
                    android:text="Bitcoin"
                    android:paddingBottom="2dp"
                    android:layout_marginTop="3dp"
                    android:textSize="@dimen/text_very_small"
            />
        </LinearLayout>
        <LinearLayout
                android:id="@+id/price_layout"
                android:layout_alignParentRight="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:padding="5dp"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/last_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/symbol"
                    android:gravity="right"
                    android:text="1234"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"
                    android:textSize="@dimen/text_medium"/>
            <TextView
                    android:id="@+id/day_change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/last_price"
                    android:text=" 2.1%"
                    android:gravity="right"
                    android:paddingBottom="2dp"
                    android:textColor="@color/red"
                    android:layout_marginRight="5dp"
                    android:textSize="@dimen/text_small"
            />
        </LinearLayout>
        <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/colorPrimaryDark"
                android:layout_below="@id/name_layout"
                android:layout_toRightOf="@id/bar_view"
                android:layout_marginTop="4dp"></View>

        <LinearLayout
                android:id="@+id/data_layout"
                android:layout_below="@id/name_layout"
                android:layout_width="match_parent"
                android:padding="@dimen/padding_small"
                android:layout_marginTop="@dimen/margin_medium"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">

            <TextView android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:textSize="@dimen/text_very_small"
                      android:textStyle="bold"
                      android:gravity="center"
                      android:text="1H"/>
            <TextView android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:textSize="@dimen/text_very_small"
                      android:textStyle="bold"
                      android:gravity="center"
                      android:text="1D"/>
            <TextView android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:textSize="@dimen/text_very_small"
                      android:textStyle="bold"
                      android:gravity="center"
                      android:text="1W"/>
            <TextView android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:textSize="@dimen/text_very_small"
                      android:textStyle="bold"
                      android:gravity="center"
                      android:text="High"/>
            <TextView android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:textSize="@dimen/text_very_small"
                      android:textStyle="bold"
                      android:gravity="center"
                      android:text="Low"/>
            <TextView android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:textSize="@dimen/text_very_small"
                      android:textStyle="bold"
                      android:gravity="center"
                      android:text="vol"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/data_layout_value"
                android:layout_below="@+id/data_layout"
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/padding_small"
                android:paddingRight="@dimen/padding_small"
                android:paddingBottom="@dimen/padding_small"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/hour"
                    android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:textSize="@dimen/text_very_small"
                      android:textStyle="bold"
                      android:gravity="center"
                      android:text="1H"/>
            <TextView
                    android:id="@+id/day"
                    android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:textSize="@dimen/text_very_small"
                      android:textStyle="bold"
                      android:gravity="center"
                      android:text="1D"/>
            <TextView
                    android:id="@+id/week"
                    android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:textSize="@dimen/text_very_small"
                      android:textStyle="bold"
                      android:gravity="center"
                      android:text="1W"/>
            <TextView
                    android:id="@+id/high"
                    android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:textSize="@dimen/text_very_small"
                      android:textStyle="bold"
                      android:gravity="center"
                      android:text="High"/>
            <TextView
                    android:id="@+id/low"
                    android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:textSize="@dimen/text_very_small"
                      android:textStyle="bold"
                      android:gravity="center"
                      android:text="Low"/>
            <TextView
                    android:id="@+id/vol"
                    android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:textSize="@dimen/text_very_small"
                      android:textStyle="bold"
                      android:gravity="center"
                      android:text="vol"/>

        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>